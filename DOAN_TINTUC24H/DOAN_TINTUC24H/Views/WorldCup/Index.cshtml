@model List<DOAN_TINTUC24H.Models.TinTuc>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<h1>WorldCup 2022</h1>
<select id="sortDrop" class="m-3">
    <option value="">Chọn...</option>
    <option value="ngaydang" id="ngaydang">Tin tức mới nhất</option>
    <option value="tieude" id="tieude">Từ a-z</option>

</select>
<div class="container">
    <div class=" row">
        <div class="col-7">
            @foreach (var item in Model)
            {
                if (item.maTL == 7)
                {
                    <a href="/WorldCup/Detail/@item.maTinTuc">
                        <div class="card mb-3" style="max-width: 660px; border:none; ">
                            <h5 class="card-title" style="font-weight:bold;">@item.tieuDe</h5>
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="~/img/@item.hinh1" class="img-fluid rounded-start">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        @*<h5 class="card-title" style="font-weight:bold;">@item.tieuDe</h5>*@
                                        <p class="card-text">@item.doan1</p>
                                        <p class="card-text"><small class="text-muted">@item.ngayDang</small></p>
                                    </div>
                                </div>
                            </div>
                            <p style="color:wheat">------------------------------------------------------------------------------</p>
                        </div>
                    </a>
                }
            }
        </div>
        <div class="col-5">
            <h2 style="color:red">Kết quả World Cup 2022</h2>
            <table class="table">
                
                <tr>
                   
                    <td>22:00 18/12</td>
                    <td>Pháp</td>
                    <td style="color:red"> - </td>
                    <td>Argentina</td>
                </tr>
                
                <tr>
                    
                    <td>22:00 17/12</td>
                    <td>Croatia</td>
                    <td style="color:red"> - </td>
                    <td>Ma Rốc</td>
                </tr>
               
                <tr>
                   
                    <td>2:00 15/12</td>
                    <td>Pháp</td>
                    <td style="color:red">2 - 0</td>
                    <td>Ma Rốc</td>
                </tr>
                <tr>
                    <td>2:00 14/12</td>
                    <td>Argentina</td>
                    <td style="color:red">3 - 0</td>
                    <td>Croatia</td>
                </tr>
            </table>
        </div>
        <tr>
            <td colspan="6">
                @{
                    int PrevPage = ViewBag.Pagewc - 1;
                    if (PrevPage <= 0)
                    {
                        PrevPage = 1;
                    }
                    int NextPage = ViewBag.Pagewc + 1;
                    if (NextPage > ViewBag.Noofpagewc)
                    {
                        NextPage = ViewBag.Noofpagewc;
                    }
                }
                <ul class="pagination justify-content-center">
                    <li class="page-item ">

                        <a class="page-link" href="/WorldCup/index/?sort=value&page=@PrevPage"><</a>
                    </li>
                    @for (int i = 0; i < ViewBag.Noofpagewc; i++)
                    {
                        if (i + 1 == ViewBag.Pagewc)
                        {
                            <li class="page-item active">

                                <a class="page-link" href="/WorldCup/index/?sort=value&page=@(i+1)">@(i + 1)</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item ">
                                <a class="page-link" href="/WorldCup/index/?sort=value&page=@(i+1)">@(i + 1)</a>
                            </li>
                        }

                    }
                    <li class="page-item ">
                        <a class="page-link" href="/WorldCup/index/?sort=value&page=@NextPage">></a>
                    </li>
                </ul>
            </td>
        </tr>
    </div>
</div>

<script>
    $('#sortDrop').change(function () {
        const value = $('#sortDrop').val();
        window.location.href = "/WorldCup/Index/?sort=" + value + "&page=1";
    });
</script>

