@model DOAN_TINTUC24H.ViewModel.LoginVM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h1>Đăng Nhập</h1>
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="row w-25 mx-auto">
        <div class="col-md-12">
            @Html.LabelFor(temp => temp.UserName, "Tên đăng nhập:")
            <div class="m-2"></div>
            @Html.TextBoxFor(temp => temp.UserName, new { placehoder = "Tên đăng nhập", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.UserName)
        </div>
        <div class="m-2"></div>
        <div class="col-md-12">
            @Html.LabelFor(temp => temp.Password, "Mật khẩu:")
            <div class="m-2"></div>
            @Html.PasswordFor(temp => temp.Password, new { placehoder = "Password", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Password)
        </div>
        <div class="row w-100 mx-auto">
            <div class="col-md-12">
                @Html.ValidationSummary()
            </div>
            <div class="col-md-4">
                
            </div>
            <div class=" m-2">
                <button type="submit" class="btn btn-success" style="max-width:120px">Đăng nhập</button>
                <button type="button"  class="btn btn-outline-success" style="max-width:120px"><a href="/Account/Register">Đăng Kí</a> </button>
            </div>
            <div class=" m-4"></div>
        </div>
        
    </div>
}

